<div class="row">
    <div class="col s12 m8">
        <h3>{{idea.title}}
            <small>{{{editIcon idea.user user idea._id false}}}</small>
        </h3>
        <div class="card idea">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{idea.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{idea.user.displayName}}</span>
                <img src="{{idea.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/ideas/user/{{idea.user._id}}">More From {{idea.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>